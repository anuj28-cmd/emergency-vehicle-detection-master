# This is a sample .env file for connecting to MongoDB Atlas
# IMPORTANT: This file should be renamed to .env for local development
# DO NOT commit your actual .env file with real credentials to git!

# MongoDB connection string example
# Format: mongodb+srv://<username>:<password>@<cluster-address>/<database-name>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<your-username>:<your-password>@<your-cluster>.mongodb.net/<your-database>?retryWrites=true&w=majority

# JWT Secret for authentication (generate your own secure secret)
JWT_SECRET=your_jwt_secret_here

# API configuration
# Use these settings for development
FLASK_ENV=development
DEBUG=True

# Use these settings for production (uncomment for deployment)
# FLASK_ENV=production
# DEBUG=False
